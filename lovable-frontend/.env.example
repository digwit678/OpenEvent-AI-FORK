# Lovable Frontend Environment Variables
# Copy this file to .env and fill in your values

# Backend API URL - your FastAPI backend hosted on Hostinger VPS
# For local development: http://localhost:8000
# For production: https://your-domain.com or http://your-vps-ip:8000
VITE_BACKEND_BASE=http://localhost:8000

# Optional: Verbalizer tone setting (defaults to 'plain' if not set)
# Options: plain, formal, friendly
VITE_VERBALIZER_TONE=plain
